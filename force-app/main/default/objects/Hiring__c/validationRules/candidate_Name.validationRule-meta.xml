<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>candidate_Name</fullName>
    <active>true</active>
    <errorConditionFormula>NOT(REGEX(  Name  ,&quot;^[a-z  A-Z]*$&quot;))</errorConditionFormula>
    <errorDisplayField>Name</errorDisplayField>
    <errorMessage>candidate name contains only alphabets</errorMessage>
</ValidationRule>
