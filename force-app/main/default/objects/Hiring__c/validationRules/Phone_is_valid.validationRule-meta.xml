<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Phone_is_valid</fullName>
    <active>false</active>
    <errorConditionFormula>OR( NOT(ISBLANK( phone__c )) ,
LEN(phone__c )   =  10 ,
NOT(ISNUMBER(phone__c)) )</errorConditionFormula>
    <errorDisplayField>phone__c</errorDisplayField>
    <errorMessage>Please enter valid phone number</errorMessage>
</ValidationRule>
